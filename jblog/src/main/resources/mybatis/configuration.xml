		<typeAlias alias="commentsVo" type="com.bitacademy.jblog.vo.CommentsVo" />
		
	</typeAliases>
	<mappers>
		<mapper resource="mybatis/mappers/users.xml" />
		<mapper resource="mybatis/mappers/blog.xml" />
